<div class="container">
  <h1>Add a location you visited</h1>
  <%= simple_form_for [@user, @location] do |l| %>
    <%= l.input :address,
                input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                wrapper_html: { data: {
                                  controller: "geocoder",
                                  geocoder_api_key_value: ENV['MAPBOX_API_KEY']
                                  }
                              } %>
    <%= l.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
